{% extends "layout.njk" %}

{% block head %}
  <title>Cursos - Rocketseat</title>
  <script src="https://kit.fontawesome.com/19f0b7e996.js" crossorigin="anonymous"></script>
{% endblock %}

{% block content %}  
  <div class="content page-courses">
    <h1>Cursos da Rocketseat</h1>
    <div class="cards">
      {% for item in items %}
        <div class="card" id="{{ item.id }}">
          <div class="img">
            <img src="{{ item.img }}" alt="logo {{ item.id }}">
          </div><!--img-->
          <div class="description">
            <p>{{ item.description }}</p>
          </div><!--description-->
          <div class="info">
            <p>{{ item.modules }}</p>
            <p class="card-price">{{ item.price }}</p>
          </div><!--info-->
        </div><!--card-->
      {% endfor %}
    </div><!--cards-->
  </div><!--content-->

  <script src="scripts.js"></script>
{% endblock %}